@viewModel DotVVM.Contrib.EditableForm.Samples.ViewModels.Sample1ViewModel, DotVVM.Contrib.EditableForm.Samples
@masterPage Views/_master.dotmaster

<dot:Content ContentPlaceHolderID="MainContent">

    <div class="row">
        <div class="col-lg-4 col-md-6">

            <dc:EditableForm DataContext="{value: CustomerForm}">

                <form DataContext="{value: Data}">
                    <div class="form-group">
                        <label>First Name:</label>
                        <dot:TextBox Text="{value: FirstName}" />
                    </div>
                    <div class="form-group">
                        <label>Last Name:</label>
                        <dot:TextBox Text="{value: LastName}" />
                    </div>
                    <div class="form-group">
                        <label>Is VIP:</label>
                        <dot:CheckBox Checked="{value: IsVip}" />
                    </div>
                </form>

            </dc:EditableForm>

        </div>
    </div>
</dot:Content>

